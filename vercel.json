{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/**",
      "use": "@vercel/node"
    },
    {
      "src": "apps/web/**",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ],
  "env": {
    "API_BASE_URL": "/api"
  }
}
